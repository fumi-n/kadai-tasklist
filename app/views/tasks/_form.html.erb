<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, 'status' %><br>
  <%= f.text_field :status %><br>

  <%= f.label :content, 'task' %><br>
  <%= f.text_field :content %><br>

  <%= f.submit '投稿' %><br>
<% end %>